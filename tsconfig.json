{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node21/tsconfig.json"
  ],
  "include": ["src", "index.tsx"],
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "bundler",
    //
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "jsxImportSource": "./src/.",
    //
    "verbatimModuleSyntax": true
  }
}
